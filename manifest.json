{
  "manifest_version": 2,

  "name": "Pocket Count",
  "description": "This extension shows the number of items in your Pocket account",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "https://ajax.googleapis.com/",
    "https://getpocket.com/"
  ]
}